{
  "name": "citybuilder3000-server",
  "version": "1.0.0",
  "description": "Serveur multiplayer pour le jeu de construction de ville CityBuilder 3000",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint server.js models/ routes/",
    "lint:fix": "eslint server.js models/ routes/ --fix",
    "setup": "npm install && node scripts/setup-db.js",
    "clean": "node scripts/clean-db.js",
    "backup": "node scripts/backup-data.js",
    "stats": "node scripts/show-stats.js"
  },
  "keywords": [
    "game",
    "city-builder",
    "multiplayer",
    "socket.io",
    "three.js",
    "real-time",
    "mongodb"
  ],
  "author": "Votre Nom <email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "joi": "^17.9.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.10.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/citybuilder3000.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/citybuilder3000/issues"
  },
  "homepage": "https://github.com/votre-username/citybuilder3000#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server.js",
      "models/**/*.js",
      "routes/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  }
}